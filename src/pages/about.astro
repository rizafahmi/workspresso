---
import Layout from '../layouts/Layout.astro';
import { icons } from '../components/icons';
---

<Layout title="Workspresso - Verified Work-Friendly Cafés">
	<div class="min-h-screen bg-neutral-950 text-white relative overflow-hidden">
		<div class="absolute inset-0">
			<div class="absolute top-20 left-10 w-72 h-72 bg-amber-500/10 rounded-full blur-3xl"></div>
			<div class="absolute bottom-20 right-10 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl"></div>
			<div class="absolute top-1/2 left-1/3 w-64 h-64 bg-rose-500/10 rounded-full blur-3xl"></div>
		</div>

		<div
			class="absolute inset-0 opacity-5"
			style="background-image: linear-gradient(white 1px, transparent 1px), linear-gradient(90deg, white 1px, transparent 1px); background-size: 50px 50px;"
		></div>

		<div class="relative flex flex-col items-center justify-center min-h-screen p-6">
			<div class="text-center max-w-md">
				<div class="mb-8 relative">
					<div class="w-32 h-32 mx-auto relative">
						<div class="absolute inset-0 bg-gradient-to-br from-amber-400 to-orange-600 rounded-3xl rotate-6 animate-pulse"></div>
						<div class="absolute inset-0 bg-gradient-to-tr from-orange-500 to-rose-600 rounded-3xl -rotate-6"></div>
						<div class="absolute inset-0 flex items-center justify-center">
							<Fragment set:html={icons.coffee} />
						</div>
					</div>
				</div>

				<h1 class="text-6xl font-black mb-3 tracking-tight">
					Work<span class="text-amber-400">spresso</span>
				</h1>

				<p class="text-xl text-gray-400 mb-12 font-light">
					Verified work-friendly cafés.
					<br />
					No uncertainty. No wasted time.
				</p>

				<div class="space-y-4 mb-12">
					<div class="flex items-center gap-4 text-left border-l-4 border-emerald-500 pl-4 py-2 bg-white/5 backdrop-blur-sm">
						<div class="w-8 h-8 text-emerald-400 flex-shrink-0">
							<Fragment set:html={icons.signal} />
						</div>
						<div>
							<div class="font-bold text-white">Wi-Fi you can trust</div>
							<div class="text-sm text-gray-400">Tested for real work</div>
						</div>
					</div>
					<div class="flex items-center gap-4 text-left border-l-4 border-amber-500 pl-4 py-2 bg-white/5 backdrop-blur-sm">
						<div class="w-8 h-8 text-amber-400 flex-shrink-0">
							<Fragment set:html={icons.zap} />
						</div>
						<div>
							<div class="font-bold text-white">Power outlet maps</div>
							<div class="text-sm text-gray-400">Stay charged all day</div>
						</div>
					</div>
					<div class="flex items-center gap-4 text-left border-l-4 border-violet-500 pl-4 py-2 bg-white/5 backdrop-blur-sm">
						<div class="w-8 h-8 text-violet-400 flex-shrink-0">
							<Fragment set:html={icons.waves} />
						</div>
						<div>
							<div class="font-bold text-white">Noise intel</div>
							<div class="text-sm text-gray-400">Find your focus</div>
						</div>
					</div>
				</div>

				<div class="space-y-3">
					<button class="w-full bg-gradient-to-r from-amber-500 to-orange-600 text-white py-4 px-6 font-bold hover:from-amber-600 hover:to-orange-700 transition-all duration-300 border-b-4 border-orange-700 hover:border-orange-800">
					ADD A VENUE
					</button>
				</div>

				<a href="/" class="mt-8 inline-block text-gray-400 text-sm underline hover:text-gray-300">
					Go Back Home
				</a>
			</div>
		</div>
	</div>
</Layout>
